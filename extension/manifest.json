{
    "manifest_version": 2,

    "name": "Pasture",
    "description": "Put your passwords out to pasture.",
    "version": "0.0.1",

    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "web_accessible_resources": [
        "*"
    ],

    "background" : {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": "icon.png"
    }
}
